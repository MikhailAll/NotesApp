@{
    ViewData["Title"] = "Add Note";
}

@model Note

<div class="col-lg-9">
    <div class="publication">
        <div class="publication-meta">
            <img src="https://via.placeholder.com/32x32"/>
            <a class="author-nickname">@Model.User.UserName</a>
            <div class="publication-date">@Model.Date</div>
        </div>

        <div class="publication-body">
            <h1>@Model.Title</h1>
            <div class="publication-tags">
                <a>tag-placeholder</a>
                <a>tag-placeholder</a>
                <a>tag-placeholder</a>
                <a>tag-placeholder</a>
                <a>tag-placeholder</a>
            </div>
            <div class="publication-content">
                @Model.Text
            </div>
            <button class="btn btn-default">Read more</button>
        </div>

        <div class="publication-footer">
            <ul>
                <li>
                    <button class="btn btn-light"><span class="oi oi-arrow-thick-top"></span></button>
                    <span class="rating">+10</span>
                    <button class="btn btn-light"><span class="oi oi-arrow-thick-bottom"></span></button>
                </li>
                <li class="stats-item">
                    <span class="oi oi-eye"> 610 </span>
                </li>
                <li class="stats-item">
                    <button class="btn btn-light"><span class="oi oi-comment-square"></span></button>
                    <span class="rating">5</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="col-lg-3"></div>